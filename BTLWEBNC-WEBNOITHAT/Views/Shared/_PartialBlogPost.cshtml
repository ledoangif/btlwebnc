@model TBlog
@{
    using (var context = new QLBanNoiThatContext()) 
    {
        var latestBlogs = context.TBlogs.OrderByDescending(b => b.NgayDang)
                                        .Take(3)
                                        .ToList();

        foreach (var blogModel in latestBlogs)
        {
            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="blog__item">
                    <div class="blog__item__pic">
                        <img src="~/blog/@Model.TenFileAnh" alt="@Model.TieuDe">
                    </div>
                    <div class="blog__item__text">
                        <ul>
                            <li><i class="fa fa-calendar-o"></i> @Model.NgayDang</li>
                            <li><i class="fa fa-comment-o"></i> 5</li>
                        </ul>
                        <h5><a href="#">@Model.TieuDe</a></h5>
                        <p>@Model.Scontent</p>
                        <a asp-controller="Blog" asp-action="BlogDetails" asp-route-id="@Model.Idblog" class="blog__btn">READ MORE</a>
                    </div>
                </div>
            </div>
        }
    }
}


<a asp-controller="Blog" asp-action="BlogDetails" asp-route-id="@Model.Idblog" class="blog__sidebar__recent__item">
    <div class="blog__sidebar__recent__item__pic">
        <img src="~/blog/@Model.TenFileAnh" alt="@Model.TieuDe">
    </div>
    <div class="blog__sidebar__recent__item__text">
        <h6>@Model.TieuDe</h6>
        <span>@Model.NgayDang</span>
    </div>
</a>